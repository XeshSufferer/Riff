<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Riff.LoginPage"
             xmlns:viewmodel="clr-namespace:Riff.ViewModels"
             x:DataType="viewmodel:LoginPageViewModel"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="*, *, *, *, *, Auto" ColumnDefinitions="*, 6*, *">

        <Label Text="Привет." Grid.Column="1" FontSize="48" HorizontalTextAlignment="Center" Margin="15"/>

        <VerticalStackLayout Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Spacing="20">
            <Entry Placeholder="Логин" Text="{Binding Login}"/>
            <Entry Placeholder="Пароль" Text="{Binding Password}"/>
            <Button Text="Войти" Command="{Binding LoginButtonCommand}"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Grid.Row="5" Spacing="40">
            <Label Text="Dev with ❤️ by Byxesh" FontSize="15" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>